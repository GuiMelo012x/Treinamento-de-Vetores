import java.util.Scanner;

public class Iago {
        public static void main(String[] args) {
            Scanner scanner = new Scanner(System.in);
            int[] vetor = new int[10];
            // Lê 10 números inteiros do teclado e armazena no vetor
            for (int i = 0; i < 10; i++) {
                System.out.print("Digite o " + (i+1) + "º número: ");
                vetor[i] = scanner.nextInt();
            }
            
            // Imprime o vetor armazenado no sentido original
            System.out.print("Vetor no sentido original: ");
            for (int i = 0; i < vetor.length; i++) {
                System.out.print(vetor[i] + " ");
            }
            System.out.println();
            
            // Imprime o vetor armazenado no sentido reverso
            System.out.print("Vetor ao contrário: ");
            for (int i = 9; i >= 0; i--) {
                System.out.print(vetor[i] + " ");
            }
            System.out.println();
            
            scanner.close();
        }
   
    }
    
